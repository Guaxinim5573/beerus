{
    "compilerOptions": {
        "lib": ["ES2022"],
        "outDir": "dist",
        "target": "ES2022",
        "module": "ES2022",
        "moduleResolution": "node16",
        "esModuleInterop": true,
        "newLine": "LF",
        "strict": true,
        "checkJs": true,
        "declaration": true,
        "skipLibCheck": false
    },
    "include": ["lib/**/*.ts", "package.json"],
    "exclude": ["node_modules", "dist", "test"]
}